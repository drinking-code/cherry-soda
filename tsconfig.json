{
  "compilerOptions": {
    "baseUrl": ".",

    "lib": ["ESNext", "dom"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",

    "jsx": "react-jsx",
    "jsxImportSource": "src",

    "allowJs": true,

    "types": ["bun-types", "jest"],
    "allowSyntheticDefaultImports": true,

    "paths": {
      "#cherry-soda": ["./src/index.ts"],
      "#server/bun": ["./src/server/bun.ts"],
      "#messages/colors": ["./src/messages/colors.bun.ts"],
    }
  }
}
