#!/bin/bash

MAIN_SCRIPT_PARTIAL="cherry-soda/cli/main.js"
DIRNAME=$(dirname "$0")

if [[ $DIRNAME == *node_modules/.bin ]]; then
  MAIN_SCRIPT_PATH="${DIRNAME//.bin/$MAIN_SCRIPT_PARTIAL}"
else
  MAIN_SCRIPT_PATH="${DIRNAME}/main.js"
fi

if [[ "$*" == *"dev"* ]]; then
  /usr/bin/env bun --hot "$MAIN_SCRIPT_PATH" -- "$@"
else
  /usr/bin/env bun "$MAIN_SCRIPT_PATH" -- "$@"
fi
